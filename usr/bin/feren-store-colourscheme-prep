#!/bin/bash

#$1 = tmp directory ID

if [ ! -f ~/.config/gtk-3.0/colors.css ]; then
    exit 0
fi

echo ":root {
$(cat ~/.config/gtk-3.0/colors.css)
}

body {
    background-color: var(--theme_base_color_breeze);
    color: var(--theme_fg_color_breeze);
}" > /tmp/feren-store-$1/color-scheme.css

sed -i 's/@define-color /--/g' /tmp/feren-store-$1/color-scheme.css
sed -i 's/breeze /breeze: /g' /tmp/feren-store-$1/color-scheme.css
